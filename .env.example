# .env.local — copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# ============================================
# SUPABASE
# ============================================
# Get these from: https://supabase.com/dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# ============================================
# CLOUDINARY
# ============================================
# Get these from: https://console.cloudinary.com/settings/api-keys
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# WHATSAPP
# ============================================
# Your WhatsApp Business number without + prefix
NEXT_PUBLIC_WHATSAPP_NUMBER=254712345678

# ============================================
# SHOP INFO (used in receipts, headers, etc.)
# ============================================
NEXT_PUBLIC_SHOP_NAME=TechShop Nairobi
NEXT_PUBLIC_SHOP_ADDRESS=123 Kenyatta Ave, Nairobi
NEXT_PUBLIC_SHOP_PHONE=+254 712 345 678
NEXT_PUBLIC_SHOP_LOGO_URL=https://res.cloudinary.com/your-cloud-name/image/upload/v1/shop/logo.png
# Currency code for prices, receipts, and labels (e.g. KES, USD)
NEXT_PUBLIC_CURRENCY=KES

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_FEATURE_RETURNED_ITEMS_VISIBLE=false
NEXT_PUBLIC_FEATURE_HOLD_EXPIRY=false
NEXT_PUBLIC_FEATURE_HOT_ITEMS=false
NEXT_PUBLIC_FEATURE_FORM_INQUIRY=false
NEXT_PUBLIC_FEATURE_RECENTLY_SOLD=true
NEXT_PUBLIC_FEATURE_ANALYTICS_DASHBOARD=true
